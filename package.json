{
  "name": "ignore-sync",
  "version": "1.0.1",
  "engines": {
    "node": ">=7.6"
  },
  "description": "a CLI tool to build and sync *ignore files across files and repositories",
  "keywords": [
    ".eslintignore",
    ".gitignore",
    ".npmignore",
    "eslintignore",
    "gitignore",
    "ignore",
    "npmignore"
  ],
  "license": "MIT",
  "author": "foray1010",
  "repository": "https://github.com/foray1010/ignore-sync",
  "bin": "src/bin.js",
  "scripts": {
    "lint": "eslint .",
    "precommit": "lint-staged && yarn test",
    "test": "cross-env NODE_ENV=test jest"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": ["**/*.js", "!**/coverage/**", "!**/node_modules/**"],
    "coverageReporters": ["lcov", "text-summary"]
  },
  "lint-staged": {
    "*.js": ["prettier-eslint --write", "eslint --fix", "git add"],
    "*.json": ["prettier-eslint --write", "git add"]
  },
  "dependencies": {
    "axios": "^0.18.0",
    "fs-extra": "^5.0.0",
    "ignore": "^3.3.7",
    "pkg-dir": "^2.0.0",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "cross-env": "^5.1.1",
    "eslint": "^4.8.0",
    "eslint-config-foray1010": "^6.2.0",
    "husky": "^0.14.0",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "prettier-eslint-cli": "^4.3.2"
  }
}
